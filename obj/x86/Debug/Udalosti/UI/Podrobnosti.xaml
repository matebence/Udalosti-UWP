<Page
    x:Class="Udalosti.Udalosti.UI.Podrobnosti"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Frame x:ConnectionId='2' 
        x:Name="podrobnosti">
        <Frame.ContentTransitions>
            <TransitionCollection>
                <NavigationThemeTransition />
            </TransitionCollection>
        </Frame.ContentTransitions>

        <Grid>
            <RelativePanel x:ConnectionId='3'
                    x:Name="nacitavanie"
                    Visibility="Collapsed"
                    Grid.RowSpan="6"
                    Grid.ColumnSpan="3">

                <ProgressRing x:ConnectionId='14' 
                        x:Name="nacitavanieUdalosti"
                        Foreground="White"
                        Visibility="Visible"
                        IsActive="true"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"/>
            </RelativePanel>
            
            <Grid x:ConnectionId='4'
                x:Name="obsah">
                <Grid.RowDefinitions>
                    <RowDefinition Height="280"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:ConnectionId='6'
                    x:Name="obrazokZvolenejUdalosti"
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Height="280"
                    Width="{ThemeResource FlyoutThemeMaxWidth}"   
                    Stretch="UniformToFill"
                    VerticalAlignment="Top">
                </Image>

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,20,0,20">

                    <TextBlock x:ConnectionId='12'
                        x:Name="denZvolenejUdalosti"
                        Foreground="#c33939"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontWeight="Bold"
                        FontSize="30"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Center"/>

                    <TextBlock x:ConnectionId='13'
                        x:Name="mesiacZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="30"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,20,0,20">

                    <TextBlock x:ConnectionId='10'
                        x:Name="nazovZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="30"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>

                    <TextBlock x:ConnectionId='11'
                        x:Name="miestoZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="30"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left">
                    </TextBlock>
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Height="1"
                    Background="#FF747474"
                    Margin="0,0,0,10"/>

                <Image
                    Grid.Row="3"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Source="/Assets/Icons/podrobnosti_vzaujemcovia.png"/>

                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10">

                    <TextBlock
                        Text="Počet záujemcov"
                        Foreground="#FF747474"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>

                    <TextBlock x:ConnectionId='9'
                        x:Name="pocetZaujemcovZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>
                </StackPanel>

                <Image
                    Grid.Row="4"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Source="/Assets/Icons/podrobnosti_vstupenka.png"/>

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10">

                    <TextBlock
                        Text="Vstupenka"
                        Foreground="#FF747474"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>

                    <TextBlock x:ConnectionId='8'
                        x:Name="vstupenkaZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>
                </StackPanel>

                <Image
                    Grid.Row="5"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Source="/Assets/Icons/podrobnosti_cas.png"/>

                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0,10,0,10">

                    <TextBlock
                        Text="Čas"
                        Foreground="#FF747474"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>

                    <TextBlock x:ConnectionId='7'
                        x:Name="casZvolenejUdalosti"
                        Foreground="White"
                        FontFamily="ms-appx:///Assets/Fonts/Raleway-Regular.ttf#Raleway"
                        FontSize="23"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button x:ConnectionId='5' 
                    x:Name="tlacidloZvolenejUdalosti"
                                       
                    Grid.Row="1"
                    Width="{ThemeResource FlyoutThemeMaxWidth}"
                    Content="Mám záujem"
                    FontFamily="ms-appx:///Assets/Fonts/Raleway-Medium.ttf#Raleway"
                    FontSize="23"
                    Foreground="White"
                    Background="#005ba6"
                    HorizontalAlignment="Center"
                    Padding="0,20,0,20"/>
            </Grid>
        </Grid>
    </Frame>
</Page>

